@inject Opciones opciones

<div class="container">
    <div class="row mt-3">
        <div class="col-6 text-center text-uppercase"><h1>You : @puntosjugador</h1></div>
        <div class="col-6 text-center text-uppercase"><h1>Computadora : @puntoscomputador</h1></div>
    </div>
    <div class="row mt-3" style="height:200px;">
        <div class="col-6 text-center choosen-image">
            @opcionjugadorimagen
        </div>
        <div class="col-6 text-center choosen-image">
            @opcioncomputadorimagen
        </div>
    </div>
    <div class="text-center mt-3" style="height:80px;">
        <h3>@mensaje</h3>
    </div>
    <div class="row">
        @foreach(var i in Enumerable.Range(0,3))
        {
            var opcion = i;
            <div class="col-4 text-center image-to-choose" @onclick="(()=> JugadorEleccion(opcion))">
                @opciones[i];
            </div>
        }
    </div>

    <div>
        ¡Suerte!
    </div>

    <div class="text-center">
        <button class="btn btn-primary" @onclick="Reiniciar">Volver a jugar</button>
    </div>
</div>

